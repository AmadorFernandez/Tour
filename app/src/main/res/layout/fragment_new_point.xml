<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edtNamePoint"
        android:hint="@string/text_name"
        android:layout_marginTop="@dimen/wiget_margin_top"
        android:textSize="12dp"
        android:textColor="@color/colorBlack"
        />

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spiner"
        android:layout_below="@+id/edtNamePoint"
        android:layout_marginTop="@dimen/wiget_margin_top"
        ></Spinner>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rating"
        android:layout_below="@+id/spiner"
        android:id="@+id/text"
        />

    <TextView
        android:id="@+id/textValue"
        android:text="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/text"
        android:layout_below="@+id/spiner"
        android:layout_marginLeft="@dimen/wiget_margin_top"
        />

    <SeekBar
        android:layout_marginTop="@dimen/wiget_margin_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/seek"
        android:max="5"
        android:layout_below="@+id/text"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <android.support.design.widget.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/flo"
        android:src="@android:drawable/ic_input_add"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/wiget_margin_top"
        android:layout_marginBottom="@dimen/wiget_margin_top"
        />


</RelativeLayout>